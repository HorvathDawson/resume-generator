<div class="section skills-combined">
    {{#if isContinuation}}
    <h2>Skills & Qualifications <span class="continuation">(continued)</span></h2>
    {{else}}
    <h2>Skills & Qualifications</h2>
    {{/if}}
    <div class="skills-list">
        {{!-- Skills items with categories --}}
        {{#each skillsItems}}
        <div class="skill-line">
            <span class="category-label">{{category}}:</span>
            <div class="tags-inline">
                {{#each tags}}
                <span class="skill-tag">{{this}}</span>
                {{/each}}
            </div>
        </div>
        {{/each}}
        
        {{!-- Professional Certifications as a category --}}
        {{#if certificationItems}}
        <div class="skill-line">
            <span class="category-label">Professional Certifications:</span>
            <div class="tags-inline">
                {{#each certificationItems}}
                <span class="skill-tag">{{name}}</span>
                {{/each}}
            </div>
        </div>
        {{/if}}
        
        {{!-- Academic Awards as a category --}}
        {{#if awardItems}}
        <div class="skill-line">
            <span class="category-label">Academic Awards:</span>
            <div class="tags-inline">
                {{#each awardItems}}
                <span class="skill-tag">{{name}}{{#if organization}} ({{organization}}){{/if}}</span>
                {{/each}}
            </div>
        </div>
        {{/if}}
    </div>
</div>
