<div class="section">
    <h2>Education</h2>
    {{#each items}}
    <div class="education-item">
        <div class="education-item-header">
            <h3>{{degree}}</h3>
            <p class="small-text">
                <i class="fa fa-map-marker"></i> {{institution}} <br>
                <i class="fa fa-calendar"></i> {{dates}}
                {{#if gpa}}<br>GPA: {{gpa}}{{/if}}
            </p>
        </div>
        <div class="education-details">
            <ul>
                {{#each details}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
    {{/each}}
</div>