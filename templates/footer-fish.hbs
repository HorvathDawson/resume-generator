<footer class="footer">
    <div class="footer-fish">
        <svg width="100%" height="4.25cm" viewBox="0 0 800 160" preserveAspectRatio="none">
            <!-- Fish 1 (larger, on the left) -->
            <g class="fish fish-1" transform="translate(150, 40)">
                <!-- Fish body -->
                <ellipse cx="40" cy="30" rx="35" ry="20" fill="#2c5aa0"/>
                <!-- Fish tail -->
                <polygon points="0,30 15,15 15,45" fill="#2c5aa0"/>
                <!-- Fish eye -->
                <circle cx="60" cy="25" r="4" fill="white"/>
                <circle cx="62" cy="25" r="2" fill="black"/>
                <!-- Fish fins -->
                <ellipse cx="35" cy="45" rx="8" ry="4" fill="#1e4080" transform="rotate(30 35 45)"/>
                <ellipse cx="35" cy="15" rx="6" ry="3" fill="#1e4080" transform="rotate(-20 35 15)"/>
                <!-- Fish mouth -->
                <ellipse cx="72" cy="30" rx="3" ry="2" fill="#1a3670"/>
            </g>

            <!-- Fish 2 (smaller, on the right, slightly lower) -->
            <g class="fish fish-2" transform="translate(450, 60)">
                <!-- Fish body -->
                <ellipse cx="40" cy="25" rx="28" ry="16" fill="#4a7ba0"/>
                <!-- Fish tail -->
                <polygon points="0,25 12,12 12,38" fill="#4a7ba0"/>
                <!-- Fish eye -->
                <circle cx="58" cy="20" r="3" fill="white"/>
                <circle cx="59" cy="20" r="1.5" fill="black"/>
                <!-- Fish fins -->
                <ellipse cx="35" cy="36" rx="6" ry="3" fill="#3a6b90" transform="rotate(25 35 36)"/>
                <ellipse cx="35" cy="14" rx="5" ry="2.5" fill="#3a6b90" transform="rotate(-15 35 14)"/>
            </g>

            <!-- Bubbles coming from fish 1's mouth -->
            <g class="bubbles">
                <circle cx="225" cy="65" r="2" fill="#87ceeb" opacity="0.7">
                    <animate attributeName="cy" values="65;45;25;5" dur="3s" repeatCount="indefinite"/>
                    <animate attributeName="opacity" values="0.7;0.5;0.3;0" dur="3s" repeatCount="indefinite"/>
                </circle>
                <circle cx="235" cy="70" r="1.5" fill="#87ceeb" opacity="0.6">
                    <animate attributeName="cy" values="70;50;30;10" dur="4s" repeatCount="indefinite" begin="0.5s"/>
                    <animate attributeName="opacity" values="0.6;0.4;0.2;0" dur="4s" repeatCount="indefinite" begin="0.5s"/>
                </circle>
                <circle cx="240" cy="68" r="2.5" fill="#87ceeb" opacity="0.8">
                    <animate attributeName="cy" values="68;48;28;8" dur="3.5s" repeatCount="indefinite" begin="1s"/>
                    <animate attributeName="opacity" values="0.8;0.6;0.4;0" dur="3.5s" repeatCount="indefinite" begin="1s"/>
                </circle>
                <circle cx="230" cy="75" r="1" fill="#87ceeb" opacity="0.5">
                    <animate attributeName="cy" values="75;55;35;15" dur="4.5s" repeatCount="indefinite" begin="1.5s"/>
                    <animate attributeName="opacity" values="0.5;0.3;0.1;0" dur="4.5s" repeatCount="indefinite" begin="1.5s"/>
                </circle>
                <circle cx="245" cy="72" r="1.8" fill="#87ceeb" opacity="0.7">
                    <animate attributeName="cy" values="72;52;32;12" dur="3.8s" repeatCount="indefinite" begin="2s"/>
                    <animate attributeName="opacity" values="0.7;0.5;0.3;0" dur="3.8s" repeatCount="indefinite" begin="2s"/>
                </circle>
            </g>

            <!-- Optional: water line effect at bottom -->
            <path d="M0,140 Q200,130 400,140 T800,140 L800,160 L0,160 Z" fill="#e6f3ff" opacity="0.3"/>
        </svg>
    </div>
</footer>
